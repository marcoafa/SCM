
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="Login">
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <h2 class="text-center">Login</h2>
        </div>

    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
                <label for="UserInput">Usuario</label>
                <input id="UserInput" type="text" class="form-control" placeholder="Introdusca su usuario">
                <small id="UserHelp" class="form-text text-muted">Introduzca el usuario correcto para ingresar al sistema</small>
            </div>
        </div>
        <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
                <label for="PasswordInput">Contraseña</label>
                <input id="PasswordInput" type="text" class="form-control" placeholder="Introduzca su contraseña">
                <small id="PasswordHelp" class="form-text text-muted">Introduzca el usuario correcto para ingresar al sistema</small>
            </div>
        </div>
        <div class="col-md-8 col-md-offset-2">
            <button style="width:100%;" class="btn btn-primary btn_big BtnLogin">Ingresar</button>
        </div>
        <div style="margin-top:40px;" class="col-md-8 col-md-offset-2">
            <p class="text-center">Sistema de Gestion de Manifiestos</p>
        </div>
    </div>
</section>

