
@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="text-center">Historial de todos los manifiestos</h2>

<!--FILTER TO GET THE DOCUMENT REQUIREDS-->
<section class="HistoryPage">
    <div class="row">
        <!--INITIAL DATE-->
        <label class="control-label col-sm-1 offset-md-2" for="InitialDateVal">Fecha Inicial:</label>
        <div class="col-sm-2 input-group">
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
            <input type="date" class="form-control" id="InitialDateVal" placeholder="Seleccionar una Fecha">
        </div>

        <!--FINAL DATE-->
        <label class="control-label col-sm-1 offset-md-1" for="FinalDateVal">Fecha Final:</label>
        <div class="col-sm-2 input-group">
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
            <input type="date" class="form-control" id="FinalDateVal" placeholder="Seleccionar una Fecha">
        </div>
    </div>

    <div class="row">
        <!--CUSTOMERS-->
        <label class="control-label col-sm-1 offset-md-2" for="CustomersFVal">Cliente:</label>
        <div class="col-sm-2 input-group">

            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
            </div>

            <select class="form-control" id="CustomersFVal">
                <option>Todos</option>
                <option>Marco</option>

            </select>
        </div>

    </div>

    <div class="sales_table row">
        <div class="col-sm-8 offset-md-2">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Manifiesto</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Detalle</th>
                        <th scope="col">Editar</th>
                    </tr>
                </thead>
